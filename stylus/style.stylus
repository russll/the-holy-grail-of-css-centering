html, body
  height: 100%

.container
  width: 70%
  height: 70%
  margin: 40px auto
  background: red    

.outer
  display: table
  width: 100%
  height: 100%

.inner
  display: table-cell
  vertical-align: middle
  text-align: center

.centered
  position: relative
  display: inline-block
  width: 50%
  padding: 1em
  background: orange
  color: white

.positioned-absolutely
  position: absolute
  top: -2em
  right: -2em
  background: blue
  padding: 1em